doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Float-Admin
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/bootstrap/css/simple-line-icons.css', rel='stylesheet')
    link(href='/bootstrap/css/font-awesome.min.css', rel='stylesheet')
    link(href='/bootstrap/css/pace.css', rel='stylesheet')
    link(href='/bootstrap/css/jasny-bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/bootstrap/css/nanoscroller.css')
    link(rel='stylesheet', href='/bootstrap/css/metismenu.min.css')
    link(href='/bootstrap/css/blue.css', rel='stylesheet')
    link(href='/bootstrap/css/style.css', rel='stylesheet')
    style(type='text/css').
      html,body{
        height: 100%;
      }
  body
    .misc-wrapper
      .misc-content
        .container
          .row
            .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
              .misc-header.text-center(style='color: #fff;font-size: 18px;')
                学生登录
              .misc-box
                p.text-center.text-uppercase.pad-v.switch(style='cursor: pointer;') 切换至教师登录 >>>
                form(role='form')
                  .form-group
                    label.text-muted(for='exampleuser1') UserName
                    .group-icon
                      input.form-control(type='text', placeholder='Username', name='studentUserName')
                      span.icon-user.text-muted.icon-input
                  .form-group
                    label.text-muted(for='exampleInputPassword1') Password
                    .group-icon
                      input.form-control(type='password', placeholder='Password', name='studentPassWord')
                      span.icon-lock.text-muted.icon-input
                  .clearfix
                    .pull-right
                      button.btn.btn-block.btn-primary.btn-student 登录
                  hr
                  p.text-center 没有账号？
                  a.btn.btn-block.btn-default(href='/reg') 现在注册
              .misc-box(style='display: none')
                p.text-center.text-uppercase.pad-v.switch(style='cursor: pointer;') 切换至学生登录 >>>
                form(role='form')
                  .form-group
                    label.text-muted(for='exampleuser1') UserName
                    .group-icon
                      input.form-control(type='text', placeholder='Username', name='teacherUserName')
                      span.icon-user.text-muted.icon-input
                  .form-group
                    label.text-muted(for='exampleInputPassword1') Password
                    .group-icon
                      input.form-control(type='password', placeholder='Password', name='teacherPassWord')
                      span.icon-lock.text-muted.icon-input
                  .clearfix
                    .pull-right
                      button.btn.btn-block.btn-primary.btn-teacher 登录
                  hr
                  p.text-center 没有账号？
                  a.btn.btn-block.btn-default(href='/reg') 现在注册
    script(src='/bootstrap/js/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/bootstrap/js/pace.min.js')
    script(src='/bootstrap/js/jasny-bootstrap.min.js')
    script(src='/bootstrap/js/jquery.slimscroll.min.js')
    script(src='/bootstrap/js/jquery.nanoscroller.min.js')
    script(src='/bootstrap/js/metismenu.min.js')
    script(src='/bootstrap/js/float-custom.js')
    script(src='/bootstrap/js/icheck.min.js')
    script(src='/CExchange/js/login.js')
