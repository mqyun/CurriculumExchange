    script(src='/bootstrap/js/datatables.responsive.min.js')
    script(src='/bootstrap/js/jquery.toast.min.js')
    script(src='/bootstrap/js/dashboard-alpha.js')
    script(src='/bootstrap/js/alertify.min.js')
    script(src='/bootstrap/js/alertify.custom.js')
    script(src='/CExchange/js/public/sweetalert.min.js')
    script(src='/CExchange/js/public/public.js')
