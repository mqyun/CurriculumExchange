html
  head
    title= title
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="icon" href="/CExchange/images/icon/fav.png" type="image/x-icon")
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/bootstrap/css/simple-line-icons.css', rel='stylesheet')
    link(href='/bootstrap/css/font-awesome.min.css', rel='stylesheet')
    link(href='/bootstrap/css/pace.css', rel='stylesheet')
    link(href='/bootstrap/css/jasny-bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/bootstrap/css/nanoscroller.css')
    link(rel='stylesheet', href='/bootstrap/css/metismenu.min.css')
    link(href='/bootstrap/css/c3.min.css', rel='stylesheet')
    link(href='/bootstrap/css/blue.css', rel='stylesheet')
    link(href='/bootstrap/css/jquery.datatables.min.css', rel='stylesheet', type='text/css')
    link(href='/bootstrap/css/responsive.bootstrap.min.css', rel='stylesheet', type='text/css')
    link(href='/bootstrap/css/jquery.toast.min.css', rel='stylesheet')
