    link(href='/bootstrap/css/alertify-bootstrap.min.css', rel='stylesheet')
    script(src='/bootstrap/js/jquery.min.js')
    block css
  body
    // 模态层
    #public-modal
      .public-modalbg
      .public-dialog
        .pdig-header
          .pdig-headertit header
          span.pdig-close ×
        .pdig-body
        .pdig-footer
          button.pdig-btn.pdig-btncancel cancel
          button.pdig-btn.pdig-btnok ok
          .clear
    // 自定义层
    block modal
    // 上导航
    .top-bar.light-top-bar
      .container-fluid
        .row
          .col-xs-6
            a.admin-logo(href= usertype==0?'/student':'/teacher')
              h1(style='color:#000;') 课程交流
                small= homestyle
            .left-nav-toggle.visible-xs.visible-sm
              a(href='')
                i.glyphicon.glyphicon-menu-hamburger
          .col-xs-6
            ul.list-inline.top-right-nav
              li
                a(href='/forum') 前往论坛
              li.dropdown.avtar-dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  img.img-circle(src='/CExchange/images/icon/fav.png', width='30', alt='')
                ul.dropdown-menu.top-dropdown
                  li
                    a(href='javascript: void(0);')
                      i.icon-user
                      = name
                  li.divider
                  li
                    a(href='/logout')
                      i.icon-logout
                      |  退出
    // 左导航
    block leftnav
    // 主体
    block content

    // JS引入
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/bootstrap/js/pace.min.js')
    script(src='/bootstrap/js/jasny-bootstrap.min.js')
    script(src='/bootstrap/js/jquery.slimscroll.min.js')
